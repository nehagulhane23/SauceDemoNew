<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
  <test parallel ="classes" thread-count="5" name="FireFoxTest">
  <parameter name = "browsername" value = "FireFox"></parameter>
    <classes>
  
      <class name="com.saucedemo.testclasses.TC001_VerifyLoginFunctionality"/>
      <class name="com.saucedemo.testclasses.TC005_VerifyDropDownFunctionality"/>
      <class name="com.saucedemo.testclasses.TC002_VerifyLogoutFunctionality"/>
    
     
      <class name="com.saucedemo.testclasses.TC004_VerifyAllProdCartFunctionality"/>
